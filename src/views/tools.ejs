<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Tools Covered</h1>
        <p class="page-subtitle">
            Master <%= tools.length %> essential tools across the entire SDLC
        </p>
    </div>
</section>

<!-- Tools by Category -->
<section class="tools-section section">
    <div class="container">
        <% Object.keys(toolsByCategory).forEach(category=> { %>
            <div class="tools-category">
                <h2 class="category-title">
                    <%= category %>
                </h2>

                <div class="tools-grid">
                    <% toolsByCategory[category].forEach(tool=> { %>
                        <div class="tool-card" id="<%= tool.id %>">
                            <div class="tool-header">
                                <span class="tool-icon">
                                    <%= tool.icon %>
                                </span>
                                <div class="tool-phases">
                                    <% tool.sdlcPhases.forEach(phase=> { %>
                                        <span class="phase-tag">
                                            <%= phase %>
                                        </span>
                                        <% }); %>
                                </div>
                            </div>

                            <h3 class="tool-name">
                                <%= tool.name %>
                            </h3>
                            <p class="tool-purpose">
                                <%= tool.purpose %>
                            </p>

                            <div class="tool-sdlc-fit">
                                <h4>How It Fits in SDLC:</h4>
                                <p>
                                    <%= tool.sdlcFit %>
                                </p>
                            </div>

                            <div class="tool-footer">
                                <a href="<%= tool.link %>" target="_blank" rel="noopener" class="tool-link">
                                    Learn More ‚Üí
                                </a>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
            <% }); %>
    </div>
</section>


<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Course Curriculum</h1>
        <p class="page-subtitle">
            <%= config.course.duration %> comprehensive training covering <%= modules.length %> major modules
        </p>
    </div>
</section>

<!-- SDLC Legend -->
<section class="sdlc-legend section-sm">
    <div class="container">
        <h3>SDLC Phases Legend</h3>
        <div class="legend-grid">
            <% sdlcPhases.forEach(phase=> { %>
                <div class="legend-item">
                    <span class="legend-icon">
                        <%= phase.icon %>
                    </span>
                    <span class="legend-name">
                        <%= phase.name %>
                    </span>
                </div>
                <% }); %>
        </div>
    </div>
</section>

<!-- Course Modules -->
<section class="modules-section section">
    <div class="container">
        <div class="modules-grid">
            <% modules.forEach((module, index)=> { %>
                <div class="module-card" id="<%= module.id %>">
                    <div class="module-header">
                        <span class="module-icon">
                            <%= module.icon %>
                        </span>
                        <div class="module-meta">
                            <span class="module-duration">
                                <%= module.duration %>
                            </span>
                            <span class="module-sdlc">
                                <%= module.sdlcPhase %>
                            </span>
                        </div>
                    </div>

                    <h3 class="module-title">
                        <%= module.title %>
                    </h3>
                    <p class="module-description">
                        <%= module.description %>
                    </p>

                    <div class="module-topics">
                        <h4>Topics Covered:</h4>
                        <ul>
                            <% module.topics.forEach(topic=> { %>
                                <li>
                                    <%= topic %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>

                    <div class="module-footer">
                        <span class="module-number">Module <%= index + 1 %></span>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
</section>


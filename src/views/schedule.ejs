<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Bootcamp Schedule</h1>
        <p class="page-subtitle">
            <%= timing.totalWeeks %> weeks ¬∑ <%= timing.totalSessions %> sessions ¬∑ <%= timing.duration %>
        </p>

        <div class="schedule-timing">
            <div class="timing-badge">
                <span class="timing-icon">üïê</span>
                <span>
                    <%= timing.time %>
                </span>
            </div>
            <div class="timing-badge">
                <span class="timing-icon">üìÖ</span>
                <span>
                    <%= timing.days %>
                </span>
            </div>
        </div>
    </div>
</section>

<!-- Phase Overview -->
<section class="phases-overview section-sm">
    <div class="container">
        <h2 class="section-title">Learning Phases</h2>
        <div class="phases-timeline">
            <% phases.forEach((phase, index)=> { %>
                <div class="phase-item" style="--phase-color: <%= phase.color %>">
                    <div class="phase-marker">
                        <%= index + 1 %>
                    </div>
                    <div class="phase-content">
                        <h4>
                            <%= phase.name %>
                        </h4>
                        <p class="phase-weeks">Weeks <%= phase.weeks %>
                        </p>
                        <p>
                            <%= phase.description %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
</section>

<!-- Detailed Weekly Schedule -->
<section class="weekly-schedule section">
    <div class="container">
        <h2 class="section-title">Week-by-Week Breakdown</h2>

        <div class="weeks-container">
            <% schedule.forEach(week=> { %>
                <div class="week-card">
                    <div class="week-header">
                        <span class="week-number">Week <%= week.week %></span>
                        <h3 class="week-theme">
                            <%= week.theme %>
                        </h3>
                    </div>

                    <div class="week-sessions">
                        <% week.sessions.forEach(session=> { %>
                            <div class="session-item">
                                <span class="session-day">
                                    <%= session.day %>
                                </span>
                                <span class="session-topic">
                                    <%= session.topic %>
                                </span>
                                <span class="session-duration">
                                    <%= session.duration %>
                                </span>
                            </div>
                            <% }); %>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
</section>

